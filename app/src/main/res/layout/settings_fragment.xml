<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
             android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:paddingBottom="50dp"
        android:background="@color/colorYellow"
        >

        <!-- Switch para permitir la eliminación -->
        <Switch
            android:id="@+id/switch_allow_deletion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Permitir eliminación de Pokémon capturados"
            tools:ignore="UseSwitchCompatOrMaterialXml"
            android:paddingBottom="30dp"/>

        <!-- Cambio de idioma -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecciona idioma"
            android:paddingTop="16dp"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/radio_group_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_spanish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Español" />

            <RadioButton
                android:id="@+id/radio_english"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inglés" />
        </RadioGroup>

        <!-- Botón para cerrar sesión -->
        <Button
            android:id="@+id/button_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar sesión"
            android:layout_marginTop="24dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>